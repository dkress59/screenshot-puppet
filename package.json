{
	"name": "screenshot-puppet",
	"version": "1.0.1",
	"description": "",
	"main": "dist/index.js",
	"type": "commonjs",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev:start": "nodemon dist/server.js",
		"dev:build": "tsc --watch --preserveWatchOutput",
		"dev:pub": "cp -f .gitignore .npmignore && sed -i /dist/d .npmignore && tsc && npm publish --dry-run",
		"dev:test": "yarn jest -u --watchAll --coverage",
		"dev": "concurrently \"yarn:dev:build\" \"yarn:dev:start\"",
		"test:ci": "tsc && PORT=5900 node dist/index.js & sleep 3 && CI=true yarn jest --coverage",
		"test": "PORT=5900 node dist/server.js & sleep 3 && yarn jest -u --coverage | true && killall -9 node",
		"lint": "eslint src --fix-dry-run",
		"fix": "eslint src --fix",
		"update": "yarn upgrade-interactive --latest",
		"pub": "cp -f .gitignore .npmignore && sed -i /dist/d .npmignore && tsc && && yarn publish"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/query-string": "^6.3.0",
		"morgan": "^1.10.0",
		"puppeteer": "^5.3.1",
		"query-string": "^6.13.7"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@types/body-parser": "^1.19.0",
		"@types/expect-puppeteer": "^4.4.5",
		"@types/express": "^4.17.9",
		"@types/jest": "^26.0.15",
		"@types/jest-environment-puppeteer": "^4.4.0",
		"@types/puppeteer": "^5.4.0",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"babel-jest": "^26.6.3",
		"body-parser": "^1.19.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.14.0",
		"eslint-plugin-import": "^2.22.1",
		"express": "^4.17.1",
		"jest": "^26.4.2",
		"jest-cli": "^26.4.2",
		"jest-express": "^1.12.0",
		"jest-puppeteer": "^4.4.0",
		"nodemon": "^2.0.4",
		"ts-jest": "^26.4.4",
		"typescript": "^4.0.2",
		"webpack": "^5.6.0",
		"webpack-dev-middleware": "^4.0.2"
	}
}